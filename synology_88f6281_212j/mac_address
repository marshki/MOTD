#!/usr/bin/env bash
# Get MAC address for onboard NIC(s).
# Desired output:
# LAN 1 001132623d3f
# LAN 2 001132623d40
# LAN 3
# LAN 4

mac_address() {

  # redirect output of cat file[path name expansion] to array
  # readarray -t -01 starts count at '1' not '0'

  readarray -t -O1 ADDRESS_ARRAY < <(cat /proc/sys/kernel/syno_mac_address[1-4])

  # Iterate over array, printing LAN n macaddress 

  for i in "${!ADDRESS_ARRAY[@]}"; do
    printf '%s\n' "LAN $i ${ADDRESS_ARRAY[$i]}"
  done
}

mac_address

