#!/usr/bin/env bash
# Get MAC address for primary network interface.

# TODO: map variables eth0, eth1, ... to correspoding MAC
#       determine primary interface
#       map MAC to DHCP IP?


test_array=( $(cat /proc/sys/kernel/syno_mac_address{1..4}))

printf '%s\n' "${test_array[@]}"

mac_address() {

  MAC=$(cat /proc/sys/kernel/syno_mac_address{1..4})
    printf "%s\n" "$MAC"
} 

mac_address
