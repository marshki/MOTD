#!/usr/bin/env bash
# Get MAC address for each onboard NIC.
# Desired output:
# LAN 1 001132623d3f
# LAN 2 001132623d40
# LAN 3
# LAN 4

readarray -t -O1 mac_address < <(cat /proc/sys/kernel/syno_mac_address[1-4])

for i in "${!mac_address[@]}"; do
  printf '%s\n' "LAN $i ${mac_address[$i]}"
done

