#!/usr/bin/env bash
# Get MAC address for primary network interface.

# TODO: 
# map variables eth0, eth1, ... to corresponding MAC
# determine primary interface
# map MAC to DHCP IP?

mac_address=( $(cat /proc/sys/kernel/syno_mac_address{1..4}))

# printf '%s\n' "${mac_address[@]/#/ }"

for i in ${!mac_address[@]}; do
  printf '%s\n' "LAN $i is ${mac_address[$i]}"
done

