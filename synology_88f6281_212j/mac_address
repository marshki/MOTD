#!/usr/bin/env bash
# Get MAC address for primary network interface.
# Desired output:
# LAN 0 001132623d3f
# LAN 1 001132623d40

# TODO: 
# determine primary interface
# map MAC to DHCP IP?

# mac_address=( $(cat /proc/sys/kernel/syno_mac_address{1..4}))

readarray -t -O1 mac_address < <(cat /proc/sys/kernel/syno_mac_address[1-4])

# printf '%s\n' "${mac_address[@]/#/LAN }"

# printf "${mac_address[*]}"

for i in "${!mac_address[@]}"; do
  printf '%s\n' "LAN $i is ${mac_address[$i]}"
done

